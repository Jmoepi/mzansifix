{
  "rules": {
    "issues": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$issueId": {
        // Anyone can read a single issue
        ".read": "auth != null",
        // Only the reporter or an admin can update an issue
        ".update": "auth != null && (data.child('reporterId').val() === auth.uid || auth.token.role === 'admin')",
        // Only authenticated users can create an issue
        ".create": "auth != null"
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid || auth.token.role === 'admin')",
        ".write": "auth != null && ($uid === auth.uid || auth.token.role === 'admin')"
      }
    },
    ".read": "false",
    ".write": "false"
  }
}
